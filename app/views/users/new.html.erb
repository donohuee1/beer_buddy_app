<h1>Add a new user!</h1>

<%= form_for @user do |f| %>

    <div>
        <%= f.label :user_name %>
        <%= f.text_field :user_name %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :age %>
        <%= f.text_field :age %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %> <!--Shows dots instead of text. If it was text_field-->
    </div>

    <%= f.submit "Add new user!" %>

<% end %>

<%= link_to "List of all Users", users_path %>
