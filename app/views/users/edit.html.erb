<h1>Edit this user</h1>

<%= form_for @user, url: {action: "update", method: "patch"} do |f| %>

    <div>
        <%= f.label :user_name %>
        <%= f.text_field :user_name %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :age %>
        <%= f.text_field :age %>
    </div>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit "Submit these edits" %>

<% end %>

