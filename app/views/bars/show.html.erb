<h1> <%= @bar.bar_name %> </h1>

<ul>
  <li>Bar Name: <%= @bar.bar_name %> </li>
  <li>Location: <%= @bar.location %> </li>
  <li>Phone Number: <%= @bar.phone_number %> </li>
  <li>User Account: <%= @user.user_name %> </li>
</ul>

<h1>All Posts(events) for this Bar!</h1>

<ul>
    <% @bar.posts.each do |post| %>
      <ul>
        <li>
            BAR NAME: <%= post.bar.bar_name %>
        </li>
        <li>
            LOCATION: <%= post.location %>
        </li>
        <li>
            DATE: <%=post.date %>
        </li>
        <li>
            TIME: <%=post.time %>
        </li>
        <li>
            EVENT DETAILS: <%= post.contents %>
        </li>
            <%#= link_to "More info", bar_post_path(@bar.id, post.id) %>
        </ul>
        <hr>

    <% end %>
</ul>

