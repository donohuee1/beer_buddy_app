<h1>Edit this bar</h1>

<%= form_for @bar, url: {action: "update", method: "patch"} do |f| %>

    <div>
        <%= f.label :bar_name %>
        <%= f.text_field :bar_name %>
    </div>

    <div>
        <%= f.label :location %>
        <%= f.text_field :location %>
    </div>

    <div>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
    </div>

    <%= f.submit "Submit these edits" %>

<% end %>

